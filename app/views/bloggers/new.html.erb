<h1>Blogger Form</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
    <li style="color:red"><%= e %></li>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br/>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
    <br><br/>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br><br/>
    <%= f.submit %>
<% end %>
